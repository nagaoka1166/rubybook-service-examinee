- content_for :css do
    = stylesheet_link_tag '/assets/posts/show'
%dl.searchbox.mx-auto
    = search_form_for @q, class: "" do |f|
        %dt= f.text_field :title_cont ,placeholder: '検索するテキストを入力...'
        %dd= f.submit ("検索") , class: 'search-btn'
.pagenate
    = paginate @posts
    = page_entries_info @posts

%table.table.table-hover
    %thead.thead-default
        - @posts.each do |post|
            .card.mx-auto
                .card-body
                    .card-title
                        = link_to "#{post.title}", post
                    .card-description
                        %p #{post.description}
                    .reaction
                        -if post.is_active == true && post.recruitment_period > Date.today
                            募集中
                        -else
                            募集停止
                        .card-like
                            %div{id: "post_#{post.id}"}
                                = render 'post', post: post
