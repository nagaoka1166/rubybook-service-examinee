%p 投稿一覧

= search_form_for @q, class: "mb-5" do |f|
    .form-group.row
        = f.label :title_cont, "名称", class: "col-sm-2 con-form-label"
    .col-sm-10
        = f.search_field :title_cont, class: "form-control"
    .form-group.row
        = f.label :created_at_gteq, "登録日時", class: "col-sm-2 col-form-label"
    .col-sm-10
        = f.search_field :created_at_gteq, class: "form-control"
    .form-group
        = f.submit class: "btn btn-outline-primary"


= link_to  '新規登録', new_post_path, class: 'nav-link' if current_user.content_type == 2

.mb-3
    = paginate @posts
    = page_entries_info @posts

%table.table.table-hover
    %thead.thead-default
        %tr
            /%th= sort_link(@q, :title, default_order: :desc)
            %th= Post.human_attribute_name(:title)
            %th= sort_link(@q, :created_at, default_order: :asc)
            /%th= Post.human_attribute_name(:created_at)
            %th
    %tbody
        - @posts.each do |post|
            .card
                .card-body
                    = link_to "#{post.title}", post
                    %p #{post.description}
                    -if post.is_active == true && post.recruitment_period > Date.today
                        %p 募集中
                    -else
                        %p 募集停止
                    - if current_user.liked_by?(post.id)
                        = link_to 'いいねを外す', destroy_like_path(post), method: :DELETE
                    - else
                        = link_to 'いいね', create_like_path(post), method: :POST